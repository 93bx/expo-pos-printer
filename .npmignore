# Exclude all top-level hidden directories by convention
/.*/

# Exclude tarballs generated by `npm pack`
/*.tgz

# Exclude test files and mocks
__mocks__
__tests__

# Exclude development and build artifacts
/babel.config.js
/android/src/androidTest/
/android/src/test/
/android/build/
/android/.gradle/
/android/.kotlin/
/android/gradle/
/android/gradlew
/android/gradlew.bat
/android/gradle.properties
/android/settings.gradle
/android/app/

# Exclude example app (not needed in published package)
/my-example/
/example/

# Exclude development files
/.vscode/
/.expo/
/patches/

# Exclude source maps (optional, but reduces package size)
*.map

# Exclude development dependencies and configs
/.eslintrc.js
/tsconfig.json
/CHANGELOG.md

# Exclude git files
/.git/
/.gitignore

# Exclude node modules (should be excluded by default, but explicit)
/node_modules/

# Exclude build cache
/build/.cache/
